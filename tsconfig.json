{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es7", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "preserveConstEnums": true
  },
  "include": ["./src/**/*"]
}
